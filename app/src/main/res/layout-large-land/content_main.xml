<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.grupobecm8.drawer.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <fragment
        class="com.example.grupobecm8.drawer.lista.views.ListaFragment"
        android:id="@+id/fragmentLista"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dadada"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/txtSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txt_select"/>

        <fragment
            class="com.example.grupobecm8.drawer.detalles.views.DetallesFragment"
            android:id="@+id/fragmentDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>


</LinearLayout>
